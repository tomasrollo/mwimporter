<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Records</h3>
  </div>
  <div class="panel-body" id="recordsPanel">
  	<div class="row">
  		<div class="col-md-12">
  			<select id="recordCategorySelect2"></select>
  			<button class="btn btn-primary btnUpdateSelectedRecordsCategory btn-xs" type="button">Change category</button>
  			<!--<button class="btn btn-primary btnDeleteSelectedRecords btn-xs" type="button">Delete selected</button>-->
  		</div>
  	</div>
    <div class="row">
    	<div class="col-md-12">
    		<table class="table table-striped table-bordered table-condensed" id="recordsTable">
    			<thead>
    				<tr>
						<th><input type="checkbox"></th>
    					<th>Date<img src="images/spin.gif" class="spinner"><br><input type="text" name="date" placeholder="date" data-col="date"></th>
    					<th>Account<img src="images/spin.gif" class="spinner"><br>Transfer to<br><input type="text" name="account" placeholder="account" data-col="account"></th>
    					<th>Data<img src="images/spin.gif" class="spinner"><br><input type="text" name="data" placeholder="data" data-col="data"></th>
    					<th>Payee<img src="images/spin.gif" class="spinner"><br><input type="text" name="payee" placeholder="payee" data-col="payee"></th>
    					<th>Category<img src="images/spin.gif" class="spinner"><br><input type="text" name="category" placeholder="category" data-col="category"></th>
    					<th>Amount<img src="images/spin.gif" class="spinner"><br><input type="text" name="amount" placeholder="amount" data-col="amount"></th>
    					<th><button class="btn btn-primary btnAddRecord" type="button"><i class="glyphicon glyphicon-plus"></i></button></th>
    				</tr>
    			</thead>
    			<tbody>
    			</tbody>
    		</table>
    	</div>
    </div>
	</div>
</div>
